{
    "version": "0.2.0",
    "configurations": [
        {
            // Use IntelliSense to find out which attributes exist for C# debugging
            // Use hover for the description of the existing attributes
            // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
            "name": "GTK",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-gtk",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/src/SpoonUno.Skia.Gtk/bin/Debug/net5.0/SpoonUno.Skia.Gtk.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/SpoonUno.Skia.Gtk",
            // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            // Use IntelliSense to find out which attributes exist for C# debugging
            // Use hover for the description of the existing attributes
            // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
            "name": "WPF",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-wpf",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/src/SpoonUno.Skia.WPF.Host/bin/Debug/netcoreapp3.1/SpoonUno.Skia.Wpf.Host.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/SpoonUno.Skia.WPF.Host",
            // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}